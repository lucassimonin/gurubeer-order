{% extends 'security/layout.html.twig' %}

{% block content %}
    {% if is_granted('ROLE_ADMIN') %}
        <script>
            document.location.href="{{ path('admin_order_list') }}"
        </script>
    {% endif %}
    {% if error %}
        <div class="alert alert-danger">{{ error.message|trans }}</div>
    {% endif %}
    <div class="container">
        <div class="col-md-5 col-md-offset-3">
            <h1 id="login-img">
                <img src={{ asset('images/admin/logo.png') }} />
            </h1>
            <form action="{{ path('login') }}" method="post" role="form" id="login">
                    <div class="form-group">
                        <input type="text" id="username" class="inputlogin login form-control" name="_username" value="{{ last_username }}" required="required" autofocus="autofocus" autocomplete="on" placeholder="{{ 'admin.user.form.email'|trans({}, 'app') }}" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="inputlogin form-control password" name="_password" required="required" placeholder="{{ 'admin.user.form.password'|trans({}, 'app') }}" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <label for="remember_me">{{ 'admin.common.remember_me'|trans({}, 'app') }}</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}" />
                    <button type="submit" class="btn btn-login">{{ 'admin.common.login.title'|trans({}, 'app') }}</button>
            </form>
        </div>
    </div>


{% endblock %}
{% block footer %}
{% endblock %}
