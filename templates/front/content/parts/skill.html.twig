{% spaceless %}
    {% if items|length > 1 %}
        {% set count = items|length // 2 %}
        {% if items|length % 2 == 1 %}
            {% set count = count + 1 %}
        {% endif %}
        {% include 'front/content/parts/skill_column.html.twig' with {'items': items[:count]}  %}
        {% include 'front/content/parts/skill_column.html.twig' with {'items': items[count:]}  %}
    {% else %}
        {% include 'front/content/parts/skill_column.html.twig' with {'items': items}  %}
    {% endif %}
{% endspaceless %}
